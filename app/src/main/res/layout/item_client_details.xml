<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:id="@+id/lyt_parent"
    android:clickable="true"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <LinearLayout
        android:orientation="horizontal"

        android:paddingTop="@dimen/spacing_large"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View android:layout_width="@dimen/spacing_large" android:layout_height="0dp"/>
        <RelativeLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/lyt_checked" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/spacing_xmlarge" android:layout_height="@dimen/spacing_xmlarge"
                    android:src="@drawable/shape_circle"
                    android:tint="@color/blue_grey_600"/>
                <TextView
                    android:id="@+id/tvFirstLetter"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:text="U"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_width="25dp" android:layout_height="25dp"
                    android:layout_centerInParent="true" app:srcCompat="@drawable/ic_done"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/lyt_image" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@+id/image" android:layout_width="@dimen/spacing_xmlarge" android:layout_height="@dimen/spacing_xmlarge"/>
                <TextView android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textColor="@android:color/white" android:id="@+id/image_letter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:layout_width="@dimen/spacing_smlarge" android:layout_height="0dp"/>
        <RelativeLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold" android:textColor="@color/grey_90"
                    android:id="@+id/tvName" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="Name"
                    android:maxLines="1" android:singleLine="true"/>
                <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" android:textColor="@color/grey_90"
                    android:id="@+id/tvMobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="@dimen/spacing_small"
                    android:text="9876543210" android:maxLines="1"
                    android:singleLine="true"/>
                <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" android:textColor="@color/grey_90"
                    android:id="@+id/tvEmail" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="@dimen/spacing_small"
                    android:text="email.address@mail.com" android:maxLines="1"
                    android:singleLine="true"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/grey_40" android:id="@+id/tvAddress"
                    android:visibility="gone"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Address" android:maxLines="1" android:singleLine="true"/>
            </LinearLayout>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/blue_600"
                android:id="@+id/date" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="10:30 AM"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View android:layout_width="@dimen/spacing_large" android:layout_height="0dp"/>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/grey_10"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
