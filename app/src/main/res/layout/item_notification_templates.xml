<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_large"
    android:layout_marginEnd="@dimen/spacing_large"
    android:layout_marginBottom="@dimen/spacing_middle"
app:cardCornerRadius="@dimen/offset_4"
app:cardElevation="@dimen/offset_8"
    >

    <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold" android:textColor="@color/grey_90"
        android:id="@+id/tvNotificationTemplates" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_large"
        android:text="Template"
       />
</androidx.cardview.widget.CardView>

