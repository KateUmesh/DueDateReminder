<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.ClientDetailsToSendNotificationsActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/toolbar_layout"/>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rvClientDetails"
                tools:listitem="@layout/item_client_details"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <androidx.core.widget.NestedScrollView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/nsClientDetails">

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/spacing_middle"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tvTotalClients"
                android:layout_marginStart="@dimen/spacing_large"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey_80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendSms1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/send_sms"
                    style="@style/primaryDarkBackgroundButton"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_middle"
                    android:layout_marginBottom="@dimen/spacing_middle"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendEmail1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/send_email"
                    style="@style/primaryDarkBackgroundButton"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_middle"/>

            </LinearLayout>



        </LinearLayout>
        </androidx.core.widget.NestedScrollView>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendSms"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                android:text="@string/send_sms"
                style="@style/primaryDarkBackgroundButton"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_middle"
                android:layout_marginBottom="@dimen/spacing_middle"/>

        </LinearLayout>




    </androidx.appcompat.widget.LinearLayoutCompat>

    <include layout="@layout/item_loading_layout"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>