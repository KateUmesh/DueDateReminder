<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duedatereminder">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.ApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_1"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DueDateReminder">
        <activity android:name=".view.activities.ClientDetailsToSendNotificationsActivity"></activity>
        <activity android:name=".view.activities.NotificationTemplatesActivity" />
        <activity android:name=".view.activities.SplashActivity" />
        <activity android:name=".view.activities.ImportClientCsvFileActivity" />
        <activity
            android:name=".view.activities.EditClientActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".view.activities.NotificationCategoriesActivity" />
        <activity
            android:name=".view.activities.AddClientActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activities.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/Theme.DueDateReminder.NoActionBar" />
        <activity
            android:name=".view.activities.RegistrationOTPVerificationActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activities.TermsAndConditionActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activities.HomeActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activities.EditAccountActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activities.OtpVerificationActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activities.CreateAccountActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activities.LoginActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activities.FileUploadActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".firebase.MyFirebaseMessagingService"
            android:exported="true"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.duedatereminder.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>